.container
   .pull-right
      form.form-right
         .form-group
            input.form-control(ng-model="searchText", placeholder="Filter")
   table.table.table-hover.table-striped.table-condensed
      thead
         tr
            th Client Name
            th Role
            th Start Date
            th End Date
         tbody
            tr(ng-repeat="project in projects | filter: searchText")
               td
                  a(href="/projects/{{project._id}}") {{project.clientName}}
               td {{project.role}}
               td {{project.startDate | date:'MMM yyyy'}}
               td {{project.endDate | date:'MMM yyyy'}}
